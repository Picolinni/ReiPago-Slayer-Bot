{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": ["ES2022"],
      "target": "ES2022",
      "moduleResolution": "Node",
      "module": "ES2022",
      "outDir": "./dist",
      "removeComments": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "strictNullChecks": true,
      "skipLibCheck": true
  },
  "ts-node": {
      "esm": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
}
